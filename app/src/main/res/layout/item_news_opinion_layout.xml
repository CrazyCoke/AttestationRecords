<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_alignParentTop="true"
        android:background="@color/color_line3"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/img_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_sample_head"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_head"
        android:text="名字"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textScaleX="1"
        android:lineSpacingExtra="4dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:text="简介简介：简介简介军军军军军军军
        军简介简介军斤斤计较斤斤计较,简介简介军奥军奥军奥军奥军军家居安静安静"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/img_head"
        android:id="@+id/tv_about"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:lineSpacingExtra="3dp"
        android:text="内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容正文正文内容内容"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_head"
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>