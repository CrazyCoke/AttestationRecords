<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_line2"
    android:orientation="vertical"
    tools:context="com.gdctwh.attestationrecords.acitvity.news.SearchActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/sky_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/menu_search"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/lly_hot_search"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:text="热门搜索"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.gdctwh.attestationrecords.widget.FlowGroupView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/flow_view"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.gdctwh.attestationrecords.widget.FlowGroupView>

    </LinearLayout>
</LinearLayout>
