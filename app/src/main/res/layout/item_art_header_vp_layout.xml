<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"

    android:id="@+id/rlt_layout"
    android:layout_width="201dp"
    android:layout_height="125dp"
    android:background="@drawable/shape_attestation_news_img"
    android:gravity="center">

    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_oval="true"
        android:id="@+id/img_circle_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/img_sample_head" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_circle_head"
        android:text="标题标题标题白天" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/img_circle_head"
        android:layout_marginTop="3dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line">

        <ImageView
            android:background="@color/black"
            android:id="@+id/img1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_sample_head" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/img1"
            android:scaleType="fitXY"
            android:src="@mipmap/img_art_sample" />
    </LinearLayout>
</RelativeLayout>